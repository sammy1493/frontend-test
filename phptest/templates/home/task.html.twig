{% extends 'base.html.twig' %}

{% block title%} To Do Tasks {% endblock%}

{% block body %}
	<h1>To Do</h1>
	{% if tasks %}
		<table id="tasks" class="table table-stripped">
			<thead>
				<tr>
					<th>#</th>
					<th>Description</th>
					<th> Action</th>
				</tr>
			</thead>
			<tbody> 
				{% for task in tasks %}
					<tr>
						<td>{{ task.id }}</td>
						<td>{{ task.description }}</td>
						<td> <a href="#" class="btn btn-danger delete-task" data-id="{{task.id}}"> Delete </a> </td>
					</tr>

				{% endfor %}

			</tbody>
		</table>

	{% else %}
	<p>No articles to display</p>


	{% endif %}

	<a href="/home/addTask" class="btn btn-green">Add</a>
	
	
{% endblock %}

{% block javascripts %}
<script src="/js/main.js"></script>
{% endblock %}


